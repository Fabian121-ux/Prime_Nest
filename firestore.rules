
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------
    // Helper Functions
    // --------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rolePrimary == 'admin';
    }

    function isImmutable(fieldName) {
      return request.resource.data[fieldName] == resource.data[fieldName];
    }
    
    function isConversationParticipant(conversationId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/conversations/$(conversationId)) &&
             request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    function isEscrowParty(escrowDoc) {
      return isSignedIn() && (request.auth.uid == escrowDoc.payerId || request.auth.uid == escrowDoc.payeeId);
    }

    function isDealParticipant(dealDoc) {
      return isSignedIn() && (request.auth.uid == dealDoc.buyerId || request.auth.uid == dealDoc.sellerId);
    }

    // --------------------------------
    // Collection Rules
    // --------------------------------
    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && 
                       isImmutable('userId') && 
                       isImmutable('createdAt') && 
                       isImmutable('rolePrimary') && 
                       isImmutable('roles');
      allow delete: if false; 
    }

    match /tenant_profiles/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && isImmutable('userId');
      allow delete: if isExistingOwner(userId);
    }

    match /landlord_profiles/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && isImmutable('userId');
      allow delete: if isExistingOwner(userId);
    }
    
    match /artisan_profiles/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && isImmutable('userId');
      allow delete: if isExistingOwner(userId);
    }
    
    match /listings/{listingId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.ownerId) && isImmutable('ownerId') && isImmutable('createdAt');
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    match /deals/{dealId} {
      allow get: if isDealParticipant(resource.data);
      allow list: if false; // Users should not be able to list all deals.
      allow create, update, delete: if false; // Must be handled by Cloud Functions.
    }

    match /conversations/{conversationId} {
      allow get: if isConversationParticipant(conversationId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isConversationParticipant(conversationId) && isImmutable('participants') && isImmutable('listingId') && isImmutable('createdAt');
      allow delete: if false;

      // Messages are a subcollection of conversations
      match /messages/{messageId} {
        // Allow access to mock conversation for demo purposes
        allow get, list: if (conversationId in ['mock-conversation-123', 'convo-2', 'convo-3'] && isSignedIn()) || isConversationParticipant(conversationId);
        allow create: if ((conversationId in ['mock-conversation-123', 'convo-2', 'convo-3'] && isSignedIn()) || isConversationParticipant(conversationId))
                      && request.resource.data.senderId == request.auth.uid
                      && request.resource.data.type in ['text', 'file']; // Clients can only create text or file messages
        allow update, delete: if false; // Messages are immutable
      }
    }
    
    match /escrows/{escrowId} {
      allow get: if isEscrowParty(resource.data);
      allow list: if false;
      allow create, update, delete: if false; // Must be handled by Cloud Functions.
    }
    
    match /escrow_events/{eventId} {
      allow get: if exists(/databases/$(database)/documents/escrows/$(resource.data.escrowId)) && isEscrowParty(get(/databases/$(database)/documents/escrows/$(resource.data.escrowId)).data);
      allow list: if false; 
      allow create: if exists(/databases/$(database)/documents/escrows/$(request.resource.data.escrowId)) && isEscrowParty(get(/databases/$(database)/documents/escrows/$(request.resource.data.escrowId)).data) && isOwner(request.resource.data.actorId);
      allow update: if false; 
      allow delete: if false; 
    }

    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.reviewerId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.reviewerId) && isImmutable('reviewerId') && isImmutable('revieweeId') && isImmutable('listingId');
      allow delete: if isExistingOwner(resource.data.reviewerId);
    }
    
    match /admin_actions/{actionId} {
      allow get, list, create: if isAdmin();
      allow update, delete: if false;
    }
  }
}
